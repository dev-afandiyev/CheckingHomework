<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_padding_10"
    android:layout_marginVertical="@dimen/margin_padding_6"
    android:layout_marginEnd='@dimen/margin_padding_6'
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/ProfileItemText.One"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/item_news"
            android:textSize="12sp"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
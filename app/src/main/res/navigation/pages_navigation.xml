<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pages_navigation"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.checkinghomework.ui.screens.news.NewsFragment"
        android:label="NewsFragment">
        <action
            android:id="@+id/action_newsFragment_to_chatFragment3"
            app:destination="@id/chatFragment" />
    </fragment>

    <fragment
        android:id="@+id/videosFragment"
        android:name="com.example.checkinghomework.ui.screens.videos.VideosFragment"
        android:label="VideosFragment">
        <action
            android:id="@+id/action_videosFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.checkinghomework.ui.screens.chat.ChatFragment"
        android:label="ChatFragment" />

</navigation>